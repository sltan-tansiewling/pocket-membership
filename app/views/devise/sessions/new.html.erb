<div class="bg">
    <div class="container">
        <div class="row align-items-center mt-5">

            <div class="col col-md-6">
                <h1>Pocket Membership</h1>
                <p>Hold all your membership accounts in one!</p>
            </div>

            <div class="col col-md-6">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="container border rounded mt-5 new-session-form">
                        <div class="row">
                            <div class="col col-md-6 pt-3">
                                <h5>Login</h5>
                            </div>
                            <div class="col col-md-6 pt-3 signup-tab-inactive">
                                <h5><a href="<%= new_user_registration_path %>" class="default-link-color">Sign Up</a></h5>
                            </div>
                        </div>

                        <div class="row pt-3">
                            <div class="col col-md-4 text-left">
                                <%= f.label :email %>
                            </div>
                            <div class="col col-md-8 text-left">
                                <%= f.email_field :email, ({:class => "w-100"}) %>
                            </div>
                        </div>

                        <div class="row pt-3">
                            <div class="col col-md-4 text-left">
                                <%= f.label :password %>
                            </div>
                            <div class="col col-md-8 text-left">
                                <%= f.password_field :password, ({:class => "w-100"}) %>
                            </div>
                        </div>

                        <div class="row pt-3">
                            <div class="col col-md-4"></div>
                            <div class="col col-md-8 text-left">
                                <% if devise_mapping.rememberable? %>
                                    <div class="field">
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me %>
                                    </div>
                                <% end %>
                            </div>
                        </div>

                        <div class="row pt-3">
                            <div class="col col-md-4"></div>
                            <div class="col col-md-8 text-left">
                                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                                    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                                <% end %>
                            </div>
                        </div>

                        <div class="row py-3">
                            <div class="col col-md-4"></div>
                            <div class="col col-md-8 text-left">
                                <div class="actions">
                                    <%= f.submit "Login", ({:class => "btn w-50"}) %>
                                </div>
                            </div>
                        </div>
                    </div> <!-- End of Container -->
                <% end %> <!-- End of Form -->
            </div>
        </div>
    </div>
</div>