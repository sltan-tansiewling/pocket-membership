<div class="card mx-auto mt-4 border-0">
    <div class="flip-card mx-auto">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img class="card-img-top" src="<%= @memberships_user.image.url %>" alt="<%= @memberships_user.membership.store %>">
            </div>

            <div class="flip-card-back">
                <a href="<%= edit_memberships_user_path %>">
                    <img class="card-img-top" src="<%= @memberships_user.image_back.url %>" alt="<%= @memberships_user.membership.store %>">
                </a>
            </div>
        </div>
    </div>
</div>